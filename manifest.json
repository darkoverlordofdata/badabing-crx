{
    "update_url": "https://clients2.google.com/service/update2/crx",

    "name": "Bada Bing (Chromebook)",
    "short_name": "Daily Wallpaper Changer",
    "version": "0.0.1",
    "description": "Daily Wallpaper from https://bing.wallpaper.pics/ for Linux & Unix",
    "icons": {
        "48": "icons/48.png",
        "64": "icons/64.png",
        "128": "icons/128.png"
    },
    "permissions": ["alarms", "storage", "notifications", "wallpaper"],
    "host_permissions": ["https://www.bing.com/"],
    "action": {
        "default_title": "Bada Bing",
        "default_icon": "icons/48.png",
        "default_popup": "badabing.html"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "manifest_version": 3
}
